@model SiBMN.Models.ViewModels.PengajuanCreateViewModel
@{
    ViewData["Title"] = "Edit Pengajuan";
    var pengajuanId = ViewBag.PengajuanId;
}

<div class="fade-in">
    <div class="mb-4">
        <a href="@Url.Action("Details", new { id = pengajuanId })" class="btn-outline-custom mb-3" style="font-size:0.8rem;">
            <i class="fas fa-arrow-left"></i> Kembali ke Detail
        </a>
    </div>

    <form asp-action="Edit" asp-route-id="@pengajuanId" method="post">
        <div class="form-section">
            <div class="form-section-title">
                <i class="fas fa-file-signature"></i> Data Surat Pengajuan
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="NomorSuratText" class="form-label">
                        Nomor Surat Pengajuan <span class="required-star">*</span>
                    </label>
                    <input asp-for="NomorSuratText" class="form-control" />
                    <span asp-validation-for="NomorSuratText" class="text-danger" style="font-size:0.8rem;"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TanggalPengajuan" class="form-label">
                        Tanggal Pengajuan <span class="required-star">*</span>
                    </label>
                    <input asp-for="TanggalPengajuan" class="form-control" type="date" />
                    <span asp-validation-for="TanggalPengajuan" class="text-danger" style="font-size:0.8rem;"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="TahunAnggaran" class="form-label">Tahun Anggaran Belanja Modal</label>
                    <input asp-for="TahunAnggaran" class="form-control" type="number" />
                </div>

                <div class="col-md-6">
                    <label asp-for="JenisPengajuan" class="form-label">Jenis Pengajuan</label>
                    <select asp-for="JenisPengajuan" class="form-select">
                        <option value="Belanja Modal">Belanja Modal</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-section">
            <div class="form-section-title">
                <i class="fas fa-envelope-open-text"></i> Data Surat Rektor
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="NoSuratRektor" class="form-label">No. Surat Rektor</label>
                    <input asp-for="NoSuratRektor" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Tanggal Surat Rektor</label>
                    <input class="form-control" disabled placeholder="Otomatis terisi" />
                </div>
            </div>
        </div>

        <div class="form-section">
            <div class="form-section-title">
                <i class="fas fa-user-tie"></i> Data Penandatangan
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Jabatan" class="form-label">Jabatan Penandatangan</label>
                    <input asp-for="Jabatan" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="IdPejabat" class="form-label">Nama Pejabat Penandatangan</label>
                    <select asp-for="IdPejabat" asp-items="@(ViewBag.Pejabats as SelectList)" class="form-select">
                        <option value="">-- Pilih Pejabat --</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="d-flex gap-3">
            <button type="submit" class="btn-primary-custom">
                <i class="fas fa-save"></i> Simpan Perubahan
            </button>
            <a href="@Url.Action("Details", new { id = pengajuanId })" class="btn-outline-custom">
                <i class="fas fa-times"></i> Batal
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
